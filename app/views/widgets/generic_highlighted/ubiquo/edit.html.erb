<%= widget_header widget %>
<% widget_form(page, widget) do |f| %>
  <p>
    <%= f.label :model, GenericHighlighted.human_attribute_name('model') %><br />
    <%= f.select :model, options_for_select(::Ubiquo::Settings.context(:ubiquo_design).get(:generic_models)) %>
  </p>
  <p>
    <%= f.label :title, GenericHighlighted.human_attribute_name('title') %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :limit, GenericHighlighted.human_attribute_name('limit') %><br />
    <%= f.text_field :limit, :size => 3 %>
  </p>
  <%= widget_submit %>
<% end %>
